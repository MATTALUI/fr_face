<div class="screen">
  <%= render 'shared/navbar' %>

  <div class="container middle-content-fixed">
    <div class="row fullHeight">
      <%= render 'all_conversations' %>
      <div class="col-sm-7 fullHeight bg-light">
        <br/>
        <h3>
          <%= "Your Conversation With #{@conversation_with[:first_name]} #{@conversation_with[:last_name]}" %>
        </h3>
        <hr/>
        <div class="showConvo">
          <div class="conversation">
            <% @conversation.each do |message| %>
              <% if message.sender == @user %>
                <div>
                  <div class="sent Message">
                    <p><%= message[:body] %></p>
                  </div>
                </div>
              <% else %>
                <div>
                  <div class= "received Message">
                    <p><%= message[:body] %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="convoController">
            <%= form_with scope: :message, url: conversation_path(@conversation_with), method: :post, class: "container", local: true do |message| %>
              <div class="form-group row">
                <%= message.text_field :body, class: "form-control col-sm-10" %>
                <%= message.submit "Send", class: " btn btn-primary col-sm-2"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
