<div class="row">
  <%= form_with scope: :post, url: posts_path, class: "" do |form|%>

    <div class="form-group col-sm-12">
      <%= form.text_area :body, cols: 1000, rows: 3, class: "form-control col-sm-8 offset-sm-2", placeholder: "What do you want to share, #{@user.first_name}?"%>
    </div>

    <%= form.submit "POST", class: "btn btn-primary offset-sm-8 col-sm-2"%>
  <% end %>
</div>
