<div class="container-fluid screen">
  <div class="container center-ban">
    <h1>Sign up!</h1>
    <div class="row">
      <%= form_with scope: :user, class: "col-sm-8 mx-auto", local: true do |form| %>

          <div class="form-group">
            <%= form.label :username, class: "text-center"%><span class="required">*</span><br/>
            <%= form.text_field :username, class: "form-control"%>
          </div>

          <div class="form-group">
            <%= form.label :email, class: "text-center"%><span class="required">*</span><br/>
            <%= form.text_field :email, class: "form-control"%>
          </div>
          
      <% end %>
    </div>
  </div>
</div>
