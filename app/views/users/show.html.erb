<div class="screen">
  <%= render 'shared/navbar' %>
  <div class="container middle-content">
    <% if @user.id == @relevant_user.id %>
      <br/>
      <%= render 'shared/new_post_form'%>
    <hr/>
    <% end %>
    <br/>
    <div class="row">
      <% @relevant_user.posts.each do |post| %>
        <div class="col-sm-8 offset-sm-2 post">
          <h6 class="postHead"><%= "#{@relevant_user[:first_name]} #{@relevant_user[:last_name]}"%></h6>
          <p class="postBody">
            <%= post[:body] %>
          </p>
      </div>
      <% end %>
    </div>
  </div>


</div>
